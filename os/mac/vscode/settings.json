{
  // EDITOR STYLE
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
  "editor.fontSize": 19,
  "debug.console.fontSize": 19,
  "terminal.integrated.fontSize": 19,
  "editor.cursorBlinking": "solid",
  // "editor.lineHeight": 1.25,
  "editor.lineHeight": 1.4,
  "editor.fontLigatures": true,
  "editor.rulers": [80, 120],
  "editor.minimap.renderCharacters": false,
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "sideBar.border": "#333333"
      // "tree.indentGuidesStroke": "#aaaaaa"
    }
  },
  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.tips.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false,
  "window.dialogStyle": "custom",
  "terminal.integrated.enablePersistentSessions": false,
  // AUTO FORMAT
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // CODE STYLE
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimFinalNewlines": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[svelte]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // EDITOR EXPERIENCE
  "editor.inlineSuggest.enabled": true,
  "editor.cursorSurroundingLines": 8,
  "workbench.settings.editor": "json",
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "iTerm.app",
  // PLUGIN CONFIG
  "oneDarkPro.bold": true,
  "oneDarkPro.editorTheme": "Shadow",
  "oneDarkPro.italic": false,
  "oneDarkPro.markdownStyle": false,
  "oneDarkPro.vivid": true,
  "go.toolsManagement.autoUpdate": true,
  "nxConsole.enableTelemetry": false,
  "svelte.enable-ts-plugin": true,
  "svelte.plugin.svelte.note-new-transformation": false,
  "better-comments.tags": [
    { "tag": "!", "color": "#FF2D00" },
    { "tag": "?", "color": "#3498DB" },
    { "tag": "*", "color": "#12f446" },
    { "tag": "todo", "color": "#FF8C00" },
    { "tag": "note", "color": "#F38Ca0" }
  ],
  "discord.enabled": false,
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconSet": "defaultOutline",
  "errorLens.gutterIconSize": "150%",
  "errorLens.messageBackgroundMode": "none",
  // MISC
  "cSpell.userWords": ["Heyo", "Jannatin", "jannatinnaim", "Naim"],
  "redhat.telemetry.enabled": false,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "editor.linkedEditing": true,
  "workbench.activityBar.visible": false,
  "zenMode.fullScreen": false
}
